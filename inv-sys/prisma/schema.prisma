datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  firstName   String
  lastNameP   String
  lastNameM   String
  passHash    String
  birthDay    Int
  birthMonth  Int
  birthYear   Int
  email       String   @unique
  role        Role
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  administrador
  almacenista
  auxiliar
  vendedor
}